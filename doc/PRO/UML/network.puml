    namespace ch.tofind.commusica.network {

        class UnicastClient {
            [[UnicastClient.html]]
            {static} -LOG: Logger
            -socket: Socket
            -out: PrintWriter
            -in: BufferedReader
            +UnicastClient(InetAddress, int)
            +UnicastClient(Socket)
            +send(String): void
            +send(File): void
            +run(): void
        }

        class MulticastClient {
            [[MulticastClient.html]]
            {static} -LOG: Logger
            -port: int

            {static} +END_OF_COMMAND: String
            {static} +END_OF_COMMUNICATION: String
        }

        interface java.lang.Runnable {
            {abstract} +run(): void
        }
        java.lang.Runnable <|.. UnicastClient

        java.lang.Runnable <|.. MulticastClient

        java.lang.Runnable <|.. Server


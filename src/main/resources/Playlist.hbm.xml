<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="ch.tofind.commusica.media.Playlist" table="playlist">
        <meta attribute="class-description">
            This class represents a playlist composed of many tracks
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <version name="version" column="version"/>
        <property name="name" column="name" type="string" length="50" not-null="true"/>
        <set name="tracks" table="playlist_track" cascade="all">
            <key>
                <column name="playlist_id" not-null="true" />
            </key>
            <many-to-many entity-name="ch.tofind.commusica.media.Track">
                <column name="track_id" not-null="true"/>
            </many-to-many>
        </set>
        <property name="dateAdded" column="date_added" type="timestamp" length="50" not-null="true"/>
        <property name="datePlayed" column="date_played" type="timestamp" length="50" not-null="false"/>
    </class>
</hibernate-mapping>